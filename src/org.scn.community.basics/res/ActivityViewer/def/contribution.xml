
<component
	id="ActivityViewer"
	title="Activity Viewer 2.0"
	tooltip="Viewer for Custom Activities"
	icon="res/ActivityViewer/ActivityViewer.png"
	handlerType="div"
	propertySheetPath="aps/PropertyPage.html"
	group="ScnCommunityVisualizations"
	databound="false"
	modes="commons"
>
	
	<requireJs modes="commons">res/ActivityViewer/ActivityViewer</requireJs>

	<cssInclude>res/ActivityViewer/ActivityViewer.css</cssInclude>
	
	
	<property
		id="activities"
		type="String"
		title="Activities"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="categories"
		type="String"
		title="Categories"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="onSelectionChanged"
		type="ScriptText"
		title="On Selection Changed"
		group="Events"
		visible="true">

	</property>
	<property
		id="selectedKey"
		type="String"
		title="Selected Key"
		group="Display"
		bindable="true"
		visible="false">

	</property>
	<property
		id="states"
		type="String"
		title="States"
		group="Display"
		bindable="true"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">600</defaultValue>
		<defaultValue property="HEIGHT">400</defaultValue>
		
		<defaultValue property="activities"><![CDATA[[{"parentKey":"ROOT","key":"ELEMENT","leaf":false,"text":"Distribution","category":"CAT1","state":"FAILED","startDate":"20130101","endDate":"20130205"},{"parentKey":"ROOT","key":"ELEMENT1","leaf":false,"text":"Process","category":"CAT1","state":"RUNNING","startDate":"20140102","endDate":"20140605"},{"parentKey":"ROOT","key":"ELEMENT2","leaf":false,"text":"Buying","category":"CAT2","state":"STANDARD","startDate":"20140905","endDate":"20141216"},{"parentKey":"ROOT","key":"ELEMENT3","leaf":false,"text":"Work On","state":"KILLED","category":"CAT2","startDate":"20141228","endDate":"20150206"}]]]></defaultValue>
		<defaultValue property="categories"><![CDATA[[{"parentKey":"ROOT","key":"CAT1","leaf":false,"text":"Good Products"},{"parentKey":"ROOT","key":"CAT2","leaf":false,"text":"Better Products"}]]]></defaultValue>
		<defaultValue property="onSelectionChanged"><![CDATA[]]></defaultValue>
		<defaultValue property="selectedKey"><![CDATA[]]></defaultValue>
		<defaultValue property="states"><![CDATA[[{"parentKey":"ROOT","key":"STANDARD","leaf":false,"style":"bar"},{"parentKey":"ROOT","key":"FAILED","leaf":false,"style":"bar-failed"},{"parentKey":"ROOT","key":"RUNNING","leaf":false,"style":"bar-running"},{"parentKey":"ROOT","key":"SUCCEEDED","leaf":false,"style":"bar-succeeded"},{"parentKey":"ROOT","key":"KILLED","leaf":false,"style":"killed"}]]]></defaultValue>

	</initialization>

</component>
