
<component
	id="QRCode"
	title="QRCode Generator 2.0"
	tooltip="QRCode Generation"
	icon="res/QRCode/QRCode.png"
	handlerType="div"
	propertySheetPath="aps/PropertyPage.html"
	group="ScnCommunityBasics"
	databound="false"
	modes="commons"
>
	
	<requireJs modes="commons">res/QRCode/QRCode</requireJs>

	<cssInclude>res/QRCode/QRCode.css</cssInclude>
	
	
	<property
		id="background"
		type="String"
		title="Background Colour"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="ecLevel"
		type="String"
		title="Error Correction Level"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="fill"
		type="String"
		title="Fill Colour"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="maxVersion"
		type="int"
		title="Max Version (1-40)"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="minVersion"
		type="int"
		title="Min Version (1-40)"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="onclick"
		type="ScriptText"
		title="On Click"
		group="Events"
		visible="true">

	</property>
	<property
		id="printOnly"
		type="boolean"
		title="Only Show On Printouts"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="quiet"
		type="float"
		title="Quiet Zone"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="radius"
		type="float"
		title="Corner Radius (0.0 - 0.5)"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="render"
		type="String"
		title="Render Mode"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="text"
		type="String"
		title="QR Code Text"
		group="Display"
		bindable="true"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">256</defaultValue>
		<defaultValue property="HEIGHT">256</defaultValue>
		
		<defaultValue property="background"><![CDATA[]]></defaultValue>
		<defaultValue property="ecLevel"><![CDATA[L]]></defaultValue>
		<defaultValue property="fill"><![CDATA[]]></defaultValue>
		<defaultValue property="maxVersion"><![CDATA[40]]></defaultValue>
		<defaultValue property="minVersion"><![CDATA[1]]></defaultValue>
		<defaultValue property="onclick"><![CDATA[]]></defaultValue>
		<defaultValue property="printOnly"><![CDATA[false]]></defaultValue>
		<defaultValue property="quiet"><![CDATA[0]]></defaultValue>
		<defaultValue property="radius"><![CDATA[0]]></defaultValue>
		<defaultValue property="render"><![CDATA[canvas]]></defaultValue>
		<defaultValue property="text"><![CDATA[QRCode Text]]></defaultValue>

	</initialization>

</component>
