
<component
	id="ToggleButton"
	title="Toggle Button 2.0"
	tooltip="Toggle Button"
	icon="res/ToggleButton/ToggleButton.png"
	handlerType="sapui5"
	propertySheetPath="aps/PropertyPage.html"
	group="ScnCommunityBasics"
	databound="false"
	modes="commons"
>
	
	<requireJs modes="commons">res/ToggleButton/ToggleButton</requireJs>

	<cssInclude>res/ToggleButton/ToggleButton.css</cssInclude>
	
	
	<property
		id="enabled"
		type="boolean"
		title="Enabled"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="icon"
		type="Url"
		title="Icon"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="iconHovered"
		type="Url"
		title="Icon Hovered"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="iconSelected"
		type="Url"
		title="Icon Selected"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="onPress"
		type="ScriptText"
		title="Event For On Press"
		group="Events"
		visible="true">

	</property>
	<property
		id="pressed"
		type="boolean"
		title="Pressed"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="text"
		type="String"
		title="Text Value"
		group="Display"
		bindable="true"
		visible="true">

	</property>
	<property
		id="tooltip"
		type="String"
		title="Tooltip Value"
		group="Display"
		bindable="true"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">80</defaultValue>
		<defaultValue property="HEIGHT">22</defaultValue>
		
		<defaultValue property="enabled"><![CDATA[true]]></defaultValue>
		<defaultValue property="icon"><![CDATA[]]></defaultValue>
		<defaultValue property="iconHovered"><![CDATA[]]></defaultValue>
		<defaultValue property="iconSelected"><![CDATA[]]></defaultValue>
		<defaultValue property="onPress"><![CDATA[]]></defaultValue>
		<defaultValue property="pressed"><![CDATA[false]]></defaultValue>
		<defaultValue property="text"><![CDATA[]]></defaultValue>
		<defaultValue property="tooltip"><![CDATA[]]></defaultValue>

	</initialization>

</component>
