<core:View
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:m="sap.m"
  
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  
  controllerName="org.scn.community.databound.FioriBusyDialog.Controller"
  >
  
  <l:VerticalLayout
    width="100%" content="{/}">
    <l:content
		width="{width}"
	>
		<BusyDialog
				cancelButtonText="{cancelButtonText}"
				closeedKey="{closeedKey}"
				customIcon="{customIcon}"
				customIconDensityAware="{customIconDensityAware}"
				customIconHeight="{customIconHeight}"
				customIconRotationSpeed="{customIconRotationSpeed}"
				customIconWidth="{customIconWidth}"
				close="onClosed"
				showCancelButton="{showCancelButton}"
				text="{text}"
				title="{title}"
		
		>
		</BusyDialog>
	</l:content>
  </l:VerticalLayout> 
</core:View>