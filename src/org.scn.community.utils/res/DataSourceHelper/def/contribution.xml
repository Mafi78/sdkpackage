
<component
	id="DataSourceHelper"
	title="Data Source Helper 2.0"
	tooltip="DataSourceHelper - Utilities for Data Sources"
	icon="res/DataSourceHelper/DataSourceHelper.png"
	handlerType="div"
	propertySheetPath="aps/PropertyPage.html"
	group="ScnCommunityUtils"
	databound="true"
	modes="commons"
>
	
	<requireJs modes="commons">res/DataSourceHelper/DataSourceHelper</requireJs>

	<cssInclude>res/DataSourceHelper/DataSourceHelper.css</cssInclude>
	
	
	<property
		id="cache"
		type="boolean"
		title="Activate Cache"
		group="Display"
		bindable="true"
		visible="true">

	</property>


	<initialization>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="WIDTH">50</defaultValue>
		<defaultValue property="HEIGHT">50</defaultValue>
		
		<defaultValue property="cache"><![CDATA[true]]></defaultValue>

	</initialization>

</component>
