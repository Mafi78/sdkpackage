
<component
	id="CustomCssCollector"
	title="Custom Css Collector 0.X"
	tooltip="Allows to add Custom Css Files Dynamically"
	icon="res/CustomCssCollector/CustomCssCollector.png"
	handlerType="div"
	group="ScnCommunityUtils"
>

	<jsInclude>res/CustomCssCollector/CustomCssCollector.js</jsInclude>

	<property
		id="additionalCss"
		type="Url"
		title="Css File for Baseline Url"
		group="Display"
		visible="true" />

	<property
		id="elementsContent"
		type="String"
		title="Technical property for list of css"
		group="Display"
		visible="false" />

	<initialization>
		<defaultValue property="WIDTH">10</defaultValue>
		<defaultValue property="HEIGHT">10</defaultValue>
		<defaultValue property="TOP_MARGIN">-2000</defaultValue>
		<defaultValue property="LEFT_MARGIN">-2000</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>

		<defaultValue property="additionalCss"></defaultValue>
		<defaultValue property="elementsContent"></defaultValue>
	</initialization>

</component>
