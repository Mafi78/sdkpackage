
<component
	id="ClientInformation"
	title="Client Information 0.X"
	tooltip="Returns on first roundtrip some information from web client (browser)"
	icon="res/ClientInformation/ClientInformation.png"
	handlerType="sapui5"
	group="ScnCommunityUtils"
>

	<jsInclude>res/ClientInformation/ClientInformation.js</jsInclude>

	<property
		id="reloadRequest"
		type="String"
		title="Reload Request Technical Flag"
		group="Display"
		visible="false" />

	<property
		id="readLocation"
		type="boolean"
		title="Read the Location from Browser"
		group="Display"
		visible="true" />

	<property
		id="windowHeight"
		type="int"
		title="Height of the Window"
		group="Display"
		visible="false" />

	<property
		id="windowWidth"
		type="int"
		title="Width of the Window"
		group="Display"
		visible="false" />

	<property
		id="ownHeight"
		type="int"
		title="Height of the Component"
		group="Display"
		visible="false" />

	<property
		id="ownWidth"
		type="int"
		title="Width of the Component"
		group="Display"
		visible="false" />
		
	<property
		id="htmlVisible"
		type="boolean"
		title="Is The Component Visible"
		group="Display"
		visible="false" />

	<property
		id="information"
		type="String"
		title="Technical Component for Client Information"
		group="Display"
		visible="false" />

	<property
		id="geoLocation"
		type="String"
		title="Technical Component for Client Geo Location"
		group="Display"
		visible="false" />

	<property
		id="onSizeChanged"
		type="ScriptText"
		title="Event for On Size Changed"
		group="Events" />
		
	<property
		id="onInformationAvailable"
		type="ScriptText"
		title="Event for On Information Available"
		group="Events" />
		
	<property
		id="onGeoAvailable"
		type="ScriptText"
		title="Event for On Geo Available"
		group="Events" />
		
	<initialization>
		<defaultValue property="WIDTH">600</defaultValue>
		<defaultValue property="HEIGHT">600</defaultValue>
		<defaultValue property="TOP_MARGIN">0</defaultValue>
		<defaultValue property="LEFT_MARGIN">0</defaultValue>
		<defaultValue property="RIGHT_MARGIN">auto</defaultValue>
		<defaultValue property="BOTTOM_MARGIN">auto</defaultValue>

		<defaultValue property="ownHeight">-1</defaultValue>
		<defaultValue property="ownWwidth">-1</defaultValue>
		<defaultValue property="windowHeight">-1</defaultValue>
		<defaultValue property="windowWidth">-1</defaultValue>
		
		<defaultValue property="reloadRequest">X</defaultValue>
		<defaultValue property="information">{}</defaultValue>
		<defaultValue property="geoLocation">{}</defaultValue>
		<defaultValue property="htmlVisible">false</defaultValue>
	</initialization>

</component>